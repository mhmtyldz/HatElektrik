@model HatElektrik.Models.Tablolar.Galeri
@{
    ViewBag.Title = "Galeriye Resim Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bootstrap-tagsinput {
        width: 100%;
    }

    .validation-summary-errors {
        color: #ffffff;
        font-size: 16px;
        font-family: 'Trebuchet MS';
        border-radius: 5px;
        height: auto;
        width: 700px;
        background-color: #ff5905;
    }

        .validation-summary-errors li {
            list-style-type: none;
        }
</style>




<div class="container-fluid">
    @using (Html.BeginForm("Ekle", "Galeri", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

    <!-- Basic form -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <header class="panel-heading">@ViewBag.Title</header>
                    <div class="panel-body">

                        @Html.ValidationSummary()


                        <div class="form-group">
                            <label for="exampleInputEmail1">Resim Başlık</label>
                            @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", id = "Baslik", placeholder = "Resim Başlık" })
                        </div>


                        <div class="form-group">
                            <label style="color:#ff6a00;"> Lütfen Resimin Boyut ayarını yapınız</label><br />
                            <label for="exampleInputPassword1">Resim </label>
                            <input type="file" name="ResimURL" accept="image/*" class="form-control" />
                        </div>


                        @*<button type="submit" class="btn btn-primary btn-lg" id="SliderEkle">Kaydet</button>*@
                        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
