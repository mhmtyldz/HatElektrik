@model IEnumerable<HatElektrik.Models.Tablolar.Referans>

<ul class="tutors_nav">
    @foreach (var item in Model)
    {
        <li>
        <div class="single_tutors">
            <div class="tutors_thumb">
                <img src="@item.ResimURL" alt="@item.Baslik" />
            </div>
            <div class="singTutors_content">
                <h3 class="tutors_name">
                    @if (item.Baslik.Length > 15)
                    {
                        <p> @(item.Baslik.Substring(0, 15) + "...") </p>

                    }
                    else
                    {
                        <p>  @item.Baslik </p>
                    }
                
                </h3>
                <span>Öncül Referans</span>
            </div>
            <div class="singTutors_social">
                <ul class="tutors_socnav">
                    <li><a class="fa fa-facebook" href="#"></a></li>
                    <li><a class="fa fa-twitter" href="#"></a></li>
                    <li><a class="fa fa-instagram" href="#"></a></li>
                    <li><a class="fa fa-google-plus" href="#"></a></li>
                </ul>
            </div>
        </div>
    </li>
    }
    
   
</ul>
