@model IEnumerable<HatElektrik.Models.Tablolar.Slider>

<section id="slider">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="slider_area">
                <!-- Start super slider -->
                <div id="slides">
                    <ul class="slides-container">
                        @foreach (var item in Model)
                        {
                            <li>
                                <img src="@item.ResimURL" alt="@item.Baslik" />
                                <div class="slider_caption">
                                    <h2>@item.Baslik</h2>
                                    <p>@item.Aciklama</p>
                                    <a class="slider_btn" href="/Home/Urunler">Daha Fazlası</a>
                                </div>
                            </li>
                        }

                        <!-- Start single slider-->

                    </ul>
                    <nav class="slides-navigation">
                        <a href="#" class="next"></a>
                        <a href="#" class="prev"></a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
