@model HatElektrik.Models.Tablolar.Kampanya
@{
    ViewBag.Title = "Kampanya Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bootstrap-tagsinput {
        width: 100%;
    }

    .validation-summary-errors {
        color: #ffffff;
        font-size: 16px;
        font-family: 'Trebuchet MS';
        border-radius: 5px;
        height: auto;
        width: 700px;
        background-color: #d00000;
    }

        .validation-summary-errors li {
            list-style-type: none;
        }
</style>




<div class="container-fluid">
    @using (Html.BeginForm("Duzenle", "Kampanya", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

    <!-- Basic form -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <header class="panel-heading">@ViewBag.Title</header>
                    <div class="panel-body">

                        @Html.ValidationSummary()


                        <div class="form-group">
                            <label for="exampleInputEmail1"> Başlık</label>
                            @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", id = "Baslik", placeholder = "Kampanya Başlık" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Kısa Açıklama</label>
                            @Html.TextAreaFor(model => model.KisaAciklama, new { @class = "form-control", id = "KisaAciklama", placeholder = "Kısa Açıklama", cols = "45", rows = "4" })

                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1"> Açıklama</label>
                            @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", id = "Aciklama", placeholder = "Açıklama", cols = "45", rows = "4" })

                        </div>
                        <div class="form-group">
                            <label style="color:#ff6a00;"> Lütfen Resimin Boyutu 1450 x 800 yapınız</label><br />
                            <label for="exampleInputPassword1">Kampanya Resim </label>
                            <input type="file" name="ResimURL" accept="image/*" class="form-control" />
                            <img src="@Model.ResimURL" width="250" height="150" />
                        </div>


                        @*<button type="submit" class="btn btn-primary btn-lg" id="SliderEkle">Kaydet</button>*@
                        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
