@model HatElektrik.Models.Tablolar.Kategori

@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .validation-summary-errors {
        color: #ffffff;
        font-size: 16px;
        font-family: 'Trebuchet MS';
        height: auto;
        width: 700px;
        background-color: #b50000;
    }

        .validation-summary-errors li {
            list-style-type: none;
        }
</style>

@using (Html.BeginForm("Duzenle", "Kategori", FormMethod.Post))
{
    <div class="container-fluid">
        <!-- Basic form -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <header class="panel-heading">@ViewBag.Title</header>
                    <div class="panel-body">
                        @Html.HiddenFor(x => x.ID)
                        @Html.ValidationSummary()

                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori Adı</label>
                            @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control", id = "Baslik", placeholder = "Kategori Adı" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kategori Url</label>
                            @Html.TextBoxFor(x => x.URL, new { @class = "form-control", id = "URL", placeholder = "Kategori URL" })

                        </div>


                        <button type="submit" value="Kaydet" class="btn btn-primary">Kaydet</button>

                    </div>
                </div>
            </div>
        </div>
        <!-- /Basic form -->

    </div>
}