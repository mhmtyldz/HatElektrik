@model HatElektrik.Models.Tablolar.Slider
@{
    ViewBag.Title = "Slider Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bootstrap-tagsinput {
        width: 100%;
    }
</style>




<div class="container-fluid">
    @using (Html.BeginForm("Duzenle", "Slider", FormMethod.Post, new { enctype = "multipart/form-data", id = "SliderForm" }))
    {

    <!-- Basic form -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <header class="panel-heading">@ViewBag.Title</header>
                    <div class="panel-body">


                        @Html.ValidationSummary()

                        <div class="form-group">
                            <label style="color:#00ff21;"> Lütfen Resimin Boyutu 1450 x 800 yapınız</label>

                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1"> Başlık</label>
                            @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", id = "Baslik", placeholder = "Resim Başlık" })
                        </div>






                        <div class="form-group">
                            <label for="exampleInputPassword1"> Açıklama</label>
                            @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", id = "Aciklama", placeholder = "Açıklama", cols = "45", rows = "4" })

                        </div>



                        <div class="form-group">
                            <label for="exampleInputPassword1">Resim </label>
                            <input type="file" name="ResimURL" accept="image/*" class="form-control" /><br />
                            <img src="@Model.ResimURL" width="250" height="150" />
                        </div>


                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(x => x.AktifMi, new { @checked = "checked", id = "sliderAktif" }) Aktif Mi?
                            </label>
                        </div>

                        @*<button type="submit" class="btn btn-primary btn-lg" id="SliderEkle">Kaydet</button>*@
                        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

